<div class="col-xs-12">
  <!-- Start Carousel Section -->
  <div class="home-slider member_login">
    <!-- Indicators -->
    <div class="main_column_wrap">
      <h2>ログイン</h2>
      <div class="col-xs-12">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :email, 'メールアドレス' %><br />
            <%= f.email_field :email, autofocus: true %>
          </div>
          <div class="field">
            <%= f.label :password, 'パスワード' %><br />
            <%= f.password_field :password, autocomplete: "off" %>
          </div>
          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, "記憶させる" %>
            </div>
          <% end -%>
          <div class="actions">
            <%= f.submit "ログイン", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
      <div class="col-xs-12 sns_sp">
        <%= link_to image_tag('btn_twitter.png', class: "login_btn", width: '200px'), user_omniauth_authorize_path(:twitter) %>
      </div>
      <div class="col-xs-12 sns_sp">
        <%= link_to image_tag('btn_fb.png', class: "login_btn", width: '200px'), user_omniauth_authorize_path(:facebook) %>
      </div>
    </div>
  </div>
</div>

