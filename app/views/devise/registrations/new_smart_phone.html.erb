<div class="col-xs-12">
  <!-- Start Carousel Section -->
  <div class="home-slider member">
    <!-- Indicators -->
    <div class="main_column_wrap">
      <h2>会員登録</h2>
      <div class="col-xs-12">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :username, "ユーザーネーム" %><br />
            <%= f.text_field :username, autofocus: true %>
          </div>
          <div class="field">
            <%= f.label :email, 'メールアドレス' %><br />
            <%= f.email_field :email, autofocus: true %>
          </div>
          <div class="field">
            <%= f.label :password, 'パスワード' %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off" %>
          </div>
          <div class="field">
            <%= f.label :password_confirmation, 'パスワード（確認用）' %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off" %>
          </div>
          <div class="actions">
            <%= f.submit "会員登録", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
      <div class="col-xs-12 sns_sp">
        <%= link_to image_tag('btn_twitter.png', class: "login_btn", width: '200px'), user_omniauth_authorize_path(:twitter) %>
      </div>
      <div class="col-xs-12 sns_sp">
        <%= link_to image_tag('btn_fb.png', class: "login_btn", width: '200px'), user_omniauth_authorize_path(:facebook) %>
      </div>
      <div class="col-xs-12 regist_text">
        <p >
          会員登録していただくと、<br>
          <%= link_to "推しメンをお気に入りする", idol_path(306) %> ことができます。
        </p>
        <p>
          推しメンをお気に入りすると、お気に入りした推しメンのブログの更新だけを表示することができます。
        </p>
      </div>
    </div>
  </div>
</div>


