<div class="col-md-2">
  <div class="menu-item blue">
    <%= link_to idol_index_path do %>
      <i class="fa fa-users"></i>
      <p>Top Bloger</p>
    <% end %>
  </div>
  <div class="menu-item light-orange">
    <%= mail_to "info@d3-idol.jp" do %>
      <i class="fa fa-paper-plane-o"></i>
      <p>Contact</p>
    <% end %>
  </div>
</div>
<div class="col-md-8">
  <!-- Start Carousel Section -->
  <div class="home-slider">
    <!-- Indicators -->
    <div class="col-md-8 main_column_wrap">
      <div class="main_column_header">
        <span class="col-md-1"><%= link_to "All",      root_path,      class: "btn btn-primary btn-xs btn_blog_header" %></span>
        <span class="col-md-1"><%= link_to "AKB48",    "/akb",         class: "btn btn-red btn-xs btn_blog_header" %></span>
        <span class="col-md-1"><%= link_to "SKE48",    "/ske",         class: "btn btn-yellow btn-xs btn_blog_header" %></span>
        <span class="col-md-1"><%= link_to "NMB48",    "/nmb",         class: "btn btn-green btn-xs btn_blog_header" %></span>
        <span class="col-md-1"><%= link_to "HKT48",    "/hkt",         class: "btn btn-black btn-xs btn_blog_header" %></span>
        <span class="col-md-1"><%= link_to "OG",       "/og",          class: "btn btn-default btn-xs btn_blog_header" %></span>
        <span class="col-md-1"><%= link_to "乃木坂46", "/nogizaka",    class: "btn btn-purple btn-xs btn_blog_header" %></span>
      </div>
      <div class="main_column">
      <% @blogs.each do |blog| %>
        <div class="record">
          <div class="col-md-2">
            <% uniq_data(blog).each do |name| %>
              <span><%= link_to name, get_path(name), class: "#{switch_class(name)} team_btn" %></span>
            <% end %>
          </div>
          <div class="col-md-2"><%= link_to blog.idol.name, idol_path(blog.idol.id), class: "text_btn" %></div>
          <div class="col-md-5"><%= link_to truncate(CGI.unescapeHTML(Rumoji.decode(blog.title)), length: 20, omission: ".."), blog.url, target: '_blank', class: "text_btn" %></div>
          <div class="col-md-3"><%= format_datetime blog.datetime %></div>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>
